Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
escreval(" digite sua distancia em metros")
leia (dist)
km <- dist*1000
hm <- dist*100
dam <- dist*10
dm <- dist*10
cm <- dist*100
mm <- dist*100
escreval(dist, " metros de distancia")
escreval(km)
escreval(hm)
escreval(dam)
escreval(dm)
escreval(cm)
escreval(mm)



